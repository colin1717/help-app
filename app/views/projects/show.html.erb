<%= notice %>

<div class="project-page">
  <div class="project-and-tasks">
      <div class="project-info">

        <div class="name">
          <div id="project-name"><h2><%= @project.name %></h2></div>
        </div>

        <div class="summary">

          <p id="project-summary"><%= @project.summary %></p>
        </div>

        <div class="location">
          <p id="location"><%= @project.location %></p>
        </div>

      </div>

      <hr>

      <div class="available-tasks">
        <h3>Available Tasks</h3>

          <div class="available-tasks-list">
            <% @open.each do |task| %>
              <ul>
                <li><%= task.name %></li>
                <button class="claim" data-id="<%= task.id %>">Claim Task</button>
                <% if current_user.id == @project.owner_id %>

                  <button class="edit-task" data-id="<%= task.id %>">Edit Task</button>
                <% end %>
              </ul>
            <% end %>
          </div>
        <% if current_user.id == @project.owner_id %>
          <button class='new-task-button'>Add Task</button>

        <% end %>

      </div>

      <div class="space"></div>

      <hr>

      <div class="tasks-in-progress">
        <h3>Claimed Tasks</h3>

          <% @claimed.each do |task| %>
            <ul>

              <li><%= task.name %></li>

              <% if current_user.id == @project.owner_id %>

                <button class="edit-task" data-id="<%= task.id %>">Edit Task</button>
              <% end %>
            </ul>

          <% end %>
      </div>


      <hr>

      <div class="completed-tasks">
        <h3>Completed Tasks</h3>

          <% @completed.each do |task| %>
            <ul>
              <% if task.state == 'completed'%>
              <li><%= task.name %></li>
              <% end %>
            </ul>
          <% end %>
      </div>

      <div class="space"></div>
    </div>

  <div id="new-task" class='hidden'></div>
  <div id="edit-form" class='hidden'></div>

</div>
