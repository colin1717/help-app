<body class="projects">
  <h2 id='project-header'><strong>My Projects</strong></h2>

  <hr class='my-projects-hr'>

  <% @projects.each do |project| %>

  <div class="project-div">
    <ul class="project-list">
      <li><strong>Project Name</strong></li>
      <li><%= project.name %></li>
      <li><strong>Summary</strong></li>
      <li><%= project.summary %></li>
      <li><strong>Location</strong></li>
      <li><%= project.location %></li>
      <ul id="edit-delete-button-list">
      <li><button type="button" class="btn btn-default btn-sml edit"><%= link_to 'Edit Project', edit_project_path(project) %></button></li>
      <li id="lastbutton"><button type="button" class="btn btn-default btn-sml delete"><%= link_to 'Delete Project', project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></button></li>
      </ul>
    </ul>
  </div>
  <hr class='after-projects'>

  <% end %>

  <%= link_to '<button type="button" class="btn btn-default btn-sml buttons">Add a Project</button>'.html_safe, new_project_path %>
  <%= link_to '<button type="button" class="btn btn-default btn-sml buttons">Dashboard</button>'.html_safe, dashboard_path %>


</body>
