
<!-- container adds margins to each side -->
<div class="container-fluid">
      <h1 class="header-dashboard">Below are a few of our active projects. </h1>
      <hr>
  <div class="row no-gutters" id="dashboard-tasks">

    <% @projects.each do |p| %>

    <div class="col-md-3 col-sm-4">
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default cust-panel task-panel">
            <div class="panel-heading text-center " id="p-head"><h3><%= link_to p.name, project_path(p) %></h3></div>
            <div class="panel-body" id="p-body"><h5><strong>Project Summary:</strong></h5><br><%= p.summary %></div>
            <div class="panel-footer" id="p-foot"><h5><strong>Project Location:</strong></h5><br><%= p.location %></div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <%= link_to '<button type="button" class="btn btn-default btn-sml buttons">Add a Project</button>'.html_safe, new_project_path %>
</div>
