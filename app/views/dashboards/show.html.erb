
<!-- current projects sampling -->
<div class="row">
<% @projects.sample(4).each do |p| %>

  <div class="col-md-6 col-md-offset-3 panel panel-default">
    <div class="panel-heading">Project Name: <%= p.name %></div>
    <div class="panel-body">Summary: <br><%= p.summary %></div>
    <div class="panel-footer">Location: <%= p.location %></div>
  </div>
<% end %>
</div>
