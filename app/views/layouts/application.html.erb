<!DOCTYPE html>
<html>
<head>
  <title>HelpApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<!-- grid wrapper div -->
<div class="grid-container">

  <!-- nav div -->
  <div class = "row" id="nav">
    <% if !current_user %>
      <!-- note that styles are coming from the self.scaffolds stylesheed -->
      <div>
        <button class='nav-buttons'> <%= link_to "Sign Up", new_user_registration_path %> </button>
        <button class="nav-buttons"> <%= link_to "Log In", new_user_session_path %> </button>
    <% else %>
      <button class="nav-buttons"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
    <% end %>
  </div>


 <%= yield %>

<!-- footer div -->
<div class="row">
  <ul  id="footer">
    <li>About Crowd Care</li>
    <li>Contact Us</li>
    <li>Get Social</li>
  </ul>
</div>
<!-- grid wrapper div closing tag -->
</div>
</body>
</html>
