<body class="tasks-me-page">

<h1 id='task-header'><strong>My Tasks</strong></h1>
<hr>
<% @tasks.each do |task| %>

<p>
  <tr>

    <td><strong><%= task.project.name %></strong></td>

  </tr>
  <tr>
    <td><p class="task-name <%=task.state == 'completed' ? 'strike' : ""  %>" id='<%= task.id %>'><%= task.name %></p></td>
  </tr>
  <tr>
    <td><button class='complete' data-id='<%= task.id %>' data-projectid='<%= task.project_id %>' >Completed!</button></td>
  </tr>
</p>

<% end %>


<div id="bottom-buttons">
<button class="buttons"><%= link_to 'Browse Projects', projects_path %></button>
<button class="buttons"><%= link_to 'Dashboard', dashboard_path %></button>
</div>
</body>
